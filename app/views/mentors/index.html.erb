<p id="notice"><%= notice %></p>

<h1>Listing Mentors</h1>
<div class="bordered-table">
<table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Age</th>
          <th>DOB</th>
          <th>Bio</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @mentors.each do |mentor| %>
              <tr>
                <td><%= mentor.id %></td>
                <td><%= mentor.name %></td>
                <td><%= mentor.age %></td>
                <td><%= mentor.dob %></td>
                <td><%= mentor.bio %></td>
                <td><%= mentor.image %></td>
                <td><%= link_to 'Show', mentor %></td>
                <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
                <td><%= link_to 'Delete', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
      </tbody>
    </table>  
    <%= link_to 'New Mentor', new_mentor_path, class: "btn btn-link"  %>
</div>
<br>

